<style>
  .container {
    background-color: var(--blue);
    display: grid;
    gap: 3rem;
    padding: 2rem;
    justify-content: center;
  }
  .container > div:not(.contact) p {
    margin-bottom: 0.5rem;
  }
  .container > div {
    max-width: 300px;
  }
  .stor,
  .sm {
    color: var(--white);
    line-height: 1.3rem;
  }
  .stor {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .logos {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 1rem;
  }
  form {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
  form > * {
    border-radius: 8px;
    border: none;
    padding: 0.5rem 1rem;
  }
  input {
    /* padding: 0.5rem 1rem; */
  }
  form button {
    margin-top: 10px;
    background-color: transparent;
    border: 1px solid var(--white);
    color: var(--white);
    /* padding: 0.5rem 1rem; */
    align-self: flex-start;
    padding: 0.5rem 3rem;
  }
  @media screen and (min-width: 800px) {
    .container {
      grid-template-columns: repeat(3, 1fr);
      justify-items: center;
    }
  }
</style>
