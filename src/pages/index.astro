        <RePakker pak="../pak.png" pakNavn="DEN MÅNEDLIGE 1 ÅR" />
        <RePakker pak="../pak.png" pakNavn="DEN KVARTALE" />
        <RePakker pak="../pak.png" pakNavn="DEN KONTINUERLIGE" />
        <RePakker pak="../pak.png" pakNavn="DEN INTENSIVE" />
      </div>
      <div class="pak_desktop">
        <RePakkerDesk img="../pak_2.png" navn="DEN ENKLE" desc=" 3 personer pr. gang.Pris: 5400 kr. ex moms" />
