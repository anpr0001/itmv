        <RePakkerDesk img="../pak_2.png" navn="DEN KONTINUERLIGE" desc="kjhkjgjkgkg" />
        <RePakkerDesk img="../pak_2.png" navn="DEN INTENSIVE" desc="kjhkjgjkgkg" />
      </div>
      <div class="but_2">
        <Buttons buttons_indhold="Bestil repair team her" class="but_pad" />
        <Buttons buttons_indhold="Donér til ITMV" class="but_pad" />
      </div>
    </div>

    <!----------- samarbejde + diagrammer ----------->
    <div class="diagrammer">
      <img src="../trad_4.png" alt="" class="trad_forskel" />
      <h2 class="h2">DIT SAMARBEJDE GØR EN FORSKEL</h2>
      <Diagrammer />
      <!--------- citater fra virksomheder ------------>
      <div class="diagrammer">
        <img src="../trad_3.png" alt="" class="trad_forskel" />
        <h2 class="h2">HVAD SIGER VORES KUNDER</h2>
        <Citat />
        <img src="hjerte.png" alt="" class="hjerte" />
      </div>
      <!-------------------- footer ------------------->
      <Footer>
        <style>
          .hv_container {
            display: flex;
            justify-content: center;
            align-items: center;
          }

          .hv_button {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-bottom: 5%;
          }

          .hv_container_desk {
            display: none;
          }

          .bil_cont {
            padding: 10% 0 5% 0;
            background-color: var(--light_grey);
          }

          .background {
            background-color: var(--light_grey);
            padding-bottom: 5%;
          }
          .h2_pakker {
            padding-top: 15%;
          }
          .cont_pak {
            padding: 10% 5%;
          }

          .but_2 {
            display: flex;
            justify-content: center;
          }

          .desktop {
            display: none;
          }

          .h2 {
            padding-top: 3%;
            font-size: var(--font-h2-mobil);
          }

          .pak_desktop {
            display: none;
          }

          .diagrammer {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
          }

          .trad_forskel {
            padding-top: 5%;
          }

          .hjerte {
            padding: 0 20% 10% 0;
          }
          @media screen and (min-width: 800px) {
            .mobil {
              display: none;
            }

            .desktop {
              display: block;
            }

            .h2 {
              font-size: var(--font-h2-desk);
            }

            .trad1_desk {
              padding: 0 0 2% 12%;
              max-width: 70%;
            }

            .trad4_desk {
              max-width: 30%;
              margin-left: 20%;
            }

            .hv_container {
              display: none;
            }
            .hv_button {
              display: none;
            }
            .hv_container_desk {
              display: block;
            }
            .hv_button_desk {
              display: flex;
              flex-direction: column;
              padding: 0 0 5% 10%;
            }

            .bil_cont {
              display: flex;
              padding: 0;
            }

            .cont_pak {
              display: grid;
              grid-template-columns: 1fr 1fr 1fr 1fr;
              padding: 5%;
            }

            .pak_mobil {
              display: none;
            }

            .but_2 {
              display: flex;
              justify-content: space-around;
              margin: 0 10%;
            }

            .pak_desktop {
              display: grid;
              grid-template-columns: 1fr 1fr 1fr;
              padding: 5%;
            }

            .hjerte {
              padding: 0 10% 10% 0;
            }
          }
        </style>
      </Footer>
    </div>
  </body>
</html>
